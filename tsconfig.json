{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "jsx": "react-jsx" // Add JSX support for React
  },
  "include": [
    "backend/src/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"   // Removed trailing comma
  ],
  "exclude": [
    "node_modules",
    "dist"           // Also exclude the output directory
  ]
}
